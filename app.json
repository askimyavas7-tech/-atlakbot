{
  "name": "atlakbot",
  "description": "A Telegram bot deployed on Heroku",
  "repository": "https://github.com/askimyavas7-tech/-atlakbot",
  "scripts": {
    "postdeploy": "echo 'Bot deployed successfully!'"
  },
  "env": {
    "API_ID": {
      "required": true,
      "value": "YOUR_API_ID"
    },
    "API_HASH": {
      "required": true,
      "value": "YOUR_API_HASH"
    },
    "BOT_TOKEN": {
      "required": true
    }
  },
  "formation": {
    "worker": {
      "quantity": 1,
      "size": "Standard-1X"
    }
  }
}
